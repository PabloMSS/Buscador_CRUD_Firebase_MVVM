<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/principal_color"
    android:paddingVertical="16dp">

    <TextView
        android:id="@+id/tv_pregunta_confirmacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="¿Desea confirmar la operación?"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/btn_no"/>

        <Button
            android:id="@+id/btn_si"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/si"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="@color/btn_si"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>